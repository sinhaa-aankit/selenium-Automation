pipeline {
	agent any
	tools{
		maven 'Maven3.8.3'
	}
	stages{
		stage('Automation_101') {
			steps {
				git 'https://github.com/sinhaa-aankit/selenium-Automation.git'
			}
		}
		stage('Build') {
			steps{
				sh 'mvn clean compile'
			}
		}
		stage('Test') {
			steps{
				sh 'mvn test'
				junit '**/target/surfire-reports/TEST-*.xml'
			}
		}
		stage('Package') {
			steps{
				sh 'mvn package'
			}
		}
	}
}